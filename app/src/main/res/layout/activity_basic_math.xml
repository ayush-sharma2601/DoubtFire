<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#fff"
    tools:context=".Activities.BasicMathActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Math Solver"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="10dp"
            android:textStyle="bold"/>


    </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:cursorVisible="false"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/colorPrimaryDark"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:backgroundTint="@color/colorPrimaryDark"
        android:id="@+id/math_expression"
        android:hint="Type exppression here"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:text="@string/math"
        android:layout_marginTop="5dp"
        android:textColor="#1E2222"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/math_eg"
        android:textColor="#5C5A5A"
        android:textAlignment="center"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:text="Solution: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        android:id="@+id/solution"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorPrimary"
        android:text="Calculate"
        android:textStyle="bold"
        android:id="@+id/calculate"/>






</LinearLayout>