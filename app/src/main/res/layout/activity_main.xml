            android:layout_height="wrap_content"
            android:text="My Profile"
            android:id="@+id/frag_heading"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:textColor="#FFD600"/>
    </Toolbar>


